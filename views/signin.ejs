<%- include('partials/head', { pageTitle: 'Sign in â€¢ TodoPro' }) %>
<%- include('partials/navbar') %>
<%- include('partials/alerts') %>

<section class="container d-flex align-items-center justify-content-center min-vh-75">
  <div class="auth-card card border-0 shadow">
    <div class="card-body p-4 p-md-5">
      <h1 class="h4 fw-semibold mb-1">Welcome back</h1>
      <p class="text-muted mb-4">Sign in to continue</p>

      <form action="/signin" method="POST" class="vstack gap-3">
        <div>
          <label class="form-label">Username</label>
          <input type="text" name="username" class="form-control form-control-lg" required>
        </div>
        <div>
          <label class="form-label">Password</label>
          <input type="password" name="password" class="form-control form-control-lg" required>
        </div>
        <button class="btn btn-primary btn-lg w-100" type="submit">
          <i class="bi bi-box-arrow-in-right me-1"></i> Sign in
        </button>
      </form>

      <div class="text-center mt-3">
        <span class="text-muted">New here?</span>
        <a href="/signup" class="link-primary text-decoration-none">Create an account</a>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
