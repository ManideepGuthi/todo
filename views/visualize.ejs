<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TodoPro Visualizations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #4285f4;
      --background-color: #f8f9fa;
      --card-bg: #fff;
      --text-color: #3c4043;
      --light-text-color: #70757a;
      --shadow-sm: 0 1px 2px rgba(60,64,67,.3), 0 1px 3px rgba(60,64,67,.15);
    }
    body {
      background-color: var(--background-color);
      font-family: 'Inter', sans-serif;
      color: var(--text-color);
    }
    .navbar {
      background-color: var(--card-bg) !important;
      box-shadow: var(--shadow-sm);
    }
    .main-container {
      padding: 2rem 1rem;
    }
    .card {
      border: none;
      border-radius: 12px;
      box-shadow: var(--shadow-sm);
    }
    .card-header {
      background-color: transparent;
      border-bottom: 1px solid #e0e0e0;
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-color);
      padding: 1.25rem 1.5rem;
    }
    .btn-outline-primary {
      color: var(--primary-color);
      border-color: var(--primary-color);
    }
    .chart-container {
      position: relative;
      width: 100%;
      height: 400px;
    }
    canvas {
      width: 100% !important;
      height: 100% !important;
    }
    .task-list {
      list-style: none;
      padding: 0;
    }
    .task-item {
      padding: 1rem;
      background-color: var(--card-bg);
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      margin-bottom: 0.75rem;
    }
    .task-title {
      font-size: 1.1rem;
      font-weight: 500;
      margin-bottom: 0.25rem;
    }
    .task-meta {
      font-size: 0.85rem;
      color: var(--light-text-color);
    }
    .task-title.completed {
      text-decoration: line-through;
      color: var(--light-text-color);
    }
    .badge-priority {
      font-size: 0.75rem;
      padding: 0.4em 0.8em;
      border-radius: 12px;
      font-weight: 600;
      margin-right: 8px;
    }
    .badge-high { background-color: #ea4335; color: #fff; }
    .badge-medium { background-color: #fbbc05; color: #fff; }
    .badge-low { background-color: #4285f4; color: #fff; }
    .shared-completed { background-color: #d4edda; }
    .shared-pending { background-color: #fff3cd; }
  </style>
</head>
<body>

  <%- include('./partials/navbar.ejs') %>

  <div class="container-fluid main-container">
    <!-- Combined Charts Section -->
    <div class="row g-4 mb-5">
      <div class="col-12">
        <h3 class="text-center mb-4">Combined Task Analytics</h3>
      </div>
      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-header">Task Status (Combined)</div>
          <div class="card-body d-flex justify-content-center align-items-center">
            <div class="chart-container">
              <canvas id="taskStatusChart"></canvas>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="card h-100">
          <div class="card-header">Tasks by Priority (Combined)</div>
          <div class="card-body d-flex justify-content-center align-items-center">
            <div class="chart-container">
              <canvas id="priorityChart"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Shared Tasks Charts Section -->
    <div class="row g-4 mb-5">
      <div class="col-12">
        <h3 class="text-center mb-4">Shared Tasks Analytics</h3>
      </div>
      <div class="col-12">
        <div class="card h-100">
          <div class="card-header">Shared Task Status</div>
          <div class="card-body d-flex justify-content-center align-items-center">
            <div class="chart-container">
              <canvas id="sharedTaskStatusChart"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Task History Section -->
    <div class="row g-4">
      <div class="col-12">
        <div class="card h-100">
          <div class="card-header">Task History</div>
          <div class="card-body">
          <% if (tasks.length === 0) { %>
              <p class="text-muted text-center">No tasks to display yet.</p>
            <% } else { %>
              <ul class="task-list">
          <% tasks.forEach(task => { %>
                  <li class="task-item">
                    <div class="d-flex align-items-center mb-1">
                      <% if (task.priority) { %>
                          <span class="badge-priority badge-<%= task.priority.toLowerCase() %> me-2"><%= task.priority %></span>
                      <% } else { %>
                          <span class="badge-priority badge-low me-2">Low</span>
                      <% } %>
                      <h5 class="task-title mb-0 <%= task.status === 'completed' ? 'completed' : '' %>">
                        <%= task.title %>
                      </h5>
                    </div>
                    <div class="task-meta">
                      <span><i class="fas fa-calendar-alt"></i> Created: <%= task.createdAt.toLocaleString() %></span>
                      <% if (task.status === 'completed') { %>
                        <br>
                        <span class="text-success"><i class="fas fa-check-circle"></i> Completed</span>
                      <% } else { %>
                        <br>
                        <span class="text-warning"><i class="fas fa-hourglass-half"></i> Pending</span>
                      <% } %>
                    </div>
                  </li>
                <% }) %>
              </ul>
            <% } %>

            <h4 class="mt-4">Shared Tasks History</h4>
            <% if (!sharedTasks || sharedTasks.length === 0) { %>
              <p class="text-muted text-center">No shared tasks to display yet.</p>
            <% } else { %>
              <ul class="task-list">
                <% sharedTasks.forEach(task => { %>
                  <li class="task-item <%= task.completed ? 'shared-completed' : 'shared-pending' %>">
                    <div class="d-flex align-items-center mb-1">
                      <span class="badge bg-info me-2">Shared</span>
                      <h5 class="task-title mb-0 <%= task.completed ? 'completed' : '' %>">
                        <%= task.task %>
                      </h5>
                    </div>
                    <div class="task-meta">
                      <span><i class="fas fa-calendar-alt"></i> Sent: <%= task.createdAt.toLocaleString() %></span>
                      <% if (task.completed) { %>
                        <br>
                        <span class="text-success"><i class="fas fa-check-circle"></i> Completed</span>
                      <% } else { %>
                        <br>
                        <span class="text-warning"><i class="fas fa-hourglass-half"></i> Pending</span>
                      <% } %>
                    </div>
                  </li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <footer class="text-center py-4 mt-5 bg-light">
    <div class="container">
      <p class="text-muted mb-0">&copy; 2023 TodoPro. All rights reserved.</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    let data;
    try {
      data = JSON.parse('<%- JSON.stringify(data || {}) %>');
    } catch (e) {
      console.error('Error parsing data:', e);
      data = {
        taskStatus: [0, 0],
        taskPriorities: [0, 0, 0],
        tasksOverTime: {},
        personalTasks: { status: [0, 0], count: 0 },
        sharedTasks: { status: [0, 0], count: 0, byDay: {} }
      };
    }

    // Add safety checks for all chart data
    if (!data.taskStatus) data.taskStatus = [0, 0];
    if (!data.taskPriorities) data.taskPriorities = [0, 0, 0];
    if (!data.tasksOverTime) data.tasksOverTime = {};
    if (!data.personalTasks) data.personalTasks = { status: [0, 0], count: 0 };
    if (!data.sharedTasks) data.sharedTasks = { status: [0, 0], count: 0, byDay: {} };

    // Pie Chart for Task Status (Combined)
    const statusCtx = document.getElementById('taskStatusChart');
    new Chart(statusCtx, {
      type: 'pie',
      data: {
        labels: ['Pending', 'Completed'],
        datasets: [{
          data: data.taskStatus,
          backgroundColor: [
            '#fbbc05',
            '#34a853',
          ],
          borderColor: '#fff',
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'top',
          },
          title: {
            display: true,
            text: 'Your Tasks by Status (Combined)'
          }
        }
      }
    });

    // Bar Chart for Task Priorities (Combined)
    const priorityCtx = document.getElementById('priorityChart');
    new Chart(priorityCtx, {
      type: 'bar',
      data: {
        labels: ['Low', 'Medium', 'High'],
        datasets: [{
          label: '# of Tasks',
          data: data.taskPriorities,
          backgroundColor: [
            '#4285f4',
            '#fbbc05',
            '#ea4335',
          ],
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false,
          },
          title: {
            display: true,
            text: 'Tasks by Priority (Combined)'
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              stepSize: 1
            }
          }
        }
      }
    });

    // Pie Chart for Shared Task Status
    const sharedStatusCtx = document.getElementById('sharedTaskStatusChart');
    if (sharedStatusCtx) {
      new Chart(sharedStatusCtx, {
        type: 'pie',
        data: {
          labels: ['Pending', 'Completed'],
          datasets: [{
            data: data.sharedTasks.status,
            backgroundColor: [
              '#ea4335',
              '#4285f4',
            ],
            borderColor: '#fff',
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'top',
            },
            title: {
              display: true,
              text: 'Your Shared Tasks by Status'
            }
          }
        }
      });
    }
  </script>
</body>
</html>