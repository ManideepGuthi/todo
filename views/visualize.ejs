<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TodoPro Visualizations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #4285f4;
      --background-color: #f8f9fa;
      --card-bg: #fff;
      --text-color: #3c4043;
      --light-text-color: #70757a;
      --shadow-sm: 0 1px 2px rgba(60,64,67,.3), 0 1px 3px rgba(60,64,67,.15);
    }
    body {
      background-color: var(--background-color);
      font-family: 'Inter', sans-serif;
      color: var(--text-color);
    }
    .navbar {
      background-color: var(--card-bg) !important;
      box-shadow: var(--shadow-sm);
    }
    .main-container {
      padding: 2rem 1rem;
    }
    .card {
      border: none;
      border-radius: 12px;
      box-shadow: var(--shadow-sm);
    }
    .card-header {
      background-color: transparent;
      border-bottom: 1px solid #e0e0e0;
      font-size: 1.25rem;
      font-weight: 600;
      color: var(--text-color);
      padding: 1.25rem 1.5rem;
    }
    .btn-outline-primary {
      color: var(--primary-color);
      border-color: var(--primary-color);
    }
    .chart-container {
      position: relative;
      width: 100%;
      height: 400px;
    }
    canvas {
      width: 100% !important;
      height: 100% !important;
    }
    .task-list {
      list-style: none;
      padding: 0;
    }
    .task-item {
      padding: 1rem;
      background-color: var(--card-bg);
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      margin-bottom: 0.75rem;
    }
    .task-title {
      font-size: 1.1rem;
      font-weight: 500;
      margin-bottom: 0.25rem;
    }
    .task-meta {
      font-size: 0.85rem;
      color: var(--light-text-color);
    }
    .task-title.completed {
      text-decoration: line-through;
      color: var(--light-text-color);
    }
    .badge-priority {
      font-size: 0.75rem;
      padding: 0.4em 0.8em;
      border-radius: 12px;
      font-weight: 600;
      margin-right: 8px;
    }
    .badge-high { background-color: #ea4335; color: #fff; }
    .badge-medium { background-color: #fbbc05; color: #fff; }
    .badge-low { background-color: #4285f4; color: #fff; }
  </style>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light px-4 py-3">
    <div class="container-fluid">
      <a class="navbar-brand fw-bold" href="#">TodoPro</a>
      <div class="ms-auto d-flex align-items-center">
        <a href="/dashboard" class="btn btn-outline-primary btn-sm rounded-pill me-3"><i class="fas fa-arrow-left"></i> Back to Dashboard</a>
        <span class="text-secondary me-3 d-none d-md-block">Hi, **<%= user.name %>**</span>
        <a href="/logout" class="btn btn-outline-danger btn-sm rounded-pill"><i class="fas fa-sign-out-alt"></i> Logout</a>
      </div>
    </div>
  </nav>

  <div class="container-fluid main-container">
    <div class="row g-4">
      <div class="col-lg-7">
        <div class="row g-4 mb-4">
          <div class="col-12">
            <div class="card">
              <div class="card-header">Tasks Created Over Time</div>
              <div class="card-body d-flex justify-content-center align-items-center">
                <div class="chart-container">
                  <canvas id="tasksOverTimeChart"></canvas>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-header">Task Status</div>
              <div class="card-body d-flex justify-content-center align-items-center">
                <div class="chart-container">
                  <canvas id="taskStatusChart"></canvas>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-header">Tasks by Priority</div>
              <div class="card-body d-flex justify-content-center align-items-center">
                <div class="chart-container">
                  <canvas id="priorityChart"></canvas>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-5">
        <div class="card h-100">
          <div class="card-header">Task History</div>
          <div class="card-body">
            <% if (tasks.length === 0) { %>
              <p class="text-muted text-center">No tasks to display yet.</p>
            <% } else { %>
              <ul class="task-list">
                <% tasks.forEach(task => { %>
                  <li class="task-item">
                    <div class="d-flex align-items-center mb-1">
                      <% if (task.priority) { %>
                          <span class="badge-priority badge-<%= task.priority.toLowerCase() %> me-2"><%= task.priority %></span>
                      <% } else { %>
                          <span class="badge-priority badge-low me-2">Low</span>
                      <% } %>
                      <h5 class="task-title mb-0 <%= task.status === 'completed' ? 'completed' : '' %>">
                        <%= task.title %>
                      </h5>
                    </div>
                    <div class="task-meta">
                      <span><i class="fas fa-calendar-alt"></i> Created: <%= task.createdAt.toLocaleString() %></span>
                      <% if (task.status === 'completed') { %>
                        <br>
                        <span class="text-success"><i class="fas fa-check-circle"></i> Completed</span>
                      <% } else { %>
                        <br>
                        <span class="text-warning"><i class="fas fa-hourglass-half"></i> Pending</span>
                      <% } %>
                    </div>
                  </li>
                <% }) %>
              </ul>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const data = <%- JSON.stringify(data) %>;

    // Pie Chart for Task Status
    const statusCtx = document.getElementById('taskStatusChart');
    new Chart(statusCtx, {
      type: 'pie',
      data: {
        labels: ['Pending', 'Completed'],
        datasets: [{
          data: data.taskStatus,
          backgroundColor: [
            '#fbbc05',
            '#34a853',
          ],
          borderColor: '#fff',
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            position: 'top',
          },
          title: {
            display: true,
            text: 'Your Tasks by Status'
          }
        }
      }
    });

    // Bar Chart for Task Priorities
    const priorityCtx = document.getElementById('priorityChart');
    new Chart(priorityCtx, {
      type: 'bar',
      data: {
        labels: ['Low', 'Medium', 'High'],
        datasets: [{
          label: '# of Tasks',
          data: data.taskPriorities,
          backgroundColor: [
            '#4285f4',
            '#fbbc05',
            '#ea4335',
          ],
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: {
            display: false,
          },
          title: {
            display: true,
            text: 'Tasks by Priority'
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              stepSize: 1
            }
          }
        }
      }
    });

    // Line Chart for Tasks Over Time
    const tasksOverTimeCtx = document.getElementById('tasksOverTimeChart');
    new Chart(tasksOverTimeCtx, {
      type: 'line',
      data: {
        labels: Object.keys(data.tasksOverTime),
        datasets: [{
          label: 'Tasks Created',
          data: Object.values(data.tasksOverTime),
          fill: false,
          borderColor: '#4285f4',
          tension: 0.1
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          title: {
            display: true,
            text: 'Tasks Created Over Time'
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              stepSize: 1
            }
          }
        }
      }
    });
  </script>
</body>
</html>