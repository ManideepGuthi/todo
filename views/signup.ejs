<%- include('partials/head', { pageTitle: 'Create account â€¢ TodoPro' }) %>
<%- include('partials/navbar') %>
<%- include('partials/alerts') %>

<section class="container d-flex align-items-center justify-content-center min-vh-75">
  <div class="auth-card card border-0 shadow">
    <div class="card-body p-4 p-md-5">
      <h1 class="h4 fw-semibold mb-1">Create your account</h1>
      <p class="text-muted mb-4">Start organizing your day</p>

      <form action="/signup" method="POST" class="vstack gap-3" novalidate>
        <div>
          <label class="form-label">Full name</label>
          <input type="text" name="name" class="form-control form-control-lg" required>
        </div>

        <div>
          <label class="form-label">Username</label>
          <input type="text" name="username" class="form-control form-control-lg" required>
        </div>

        <div>
          <label class="form-label">Password</label>
          <input type="password" id="password" name="password" class="form-control form-control-lg" required>
        </div>

        <div>
          <label class="form-label">Confirm password</label>
          <input type="password" id="confirmPassword" name="confirmPassword" class="form-control form-control-lg" required>
        </div>

        <button class="btn btn-primary btn-lg w-100 mt-2" type="submit">
          <i class="bi bi-person-plus me-1"></i> Create account
        </button>
      </form>

      <div class="text-center mt-3">
        <span class="text-muted">Already have an account?</span>
        <a href="/signin" class="link-primary text-decoration-none">Sign in</a>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>
